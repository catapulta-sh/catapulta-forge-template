{
  "image": "mcr.microsoft.com/devcontainers/rust:latest",
  "features": {
      "ghcr.io/devcontainers/features/node:1": {}
  },
  "customizations": {
    "vscode": {
        "extensions": ["JuanBlanco.solidity"],
        "settings": {
          "solidity.formatter": "forge"
        }
    }
  },
  "postCreateCommand": "curl -L https://foundry.paradigm.xyz | bash && source /home/vscode/.bashrc && foundryup && npm i -g catapulta"
}
